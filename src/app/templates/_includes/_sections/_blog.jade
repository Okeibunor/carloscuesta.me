section.blog
    .wrap
        h2.section-title Blog
        h4.section-subtitle The latests posts of my blog.
        .row.around-xs
            -each post in ghostData.posts
                .col-xs-12.col-sm-6.col-md-5(style="display:flex;")
                    article.post
                        img.post-image(src="#{post.image}")
                        .post-content
                            header
                                h2.post-title
                                    a(href="/blog#{post.url}", onmousedown="ga('send', 'event', 'Post', '#{post.title}');", target="_blank") #{post.title}
                            .post-info
                                time(datetime="#{post.published_at}") #{post.published_at}
                                span.tags
                                    -each tag in post.tags
                                        a(class="tag #{tag.name}", href="/blog/tag/#{tag.name}", onmousedown="ga('send', 'event', 'Post', 'tag-#{tag.name}');", target="_blank") ##{tag.name}
                            p #{post.html}
                        footer.post-footer
                            a(href="/blog#{post.url}", onmousedown="ga('send', 'event', 'Post', 'Click', 'Read More');", target="_blank") Read more
        .more-btn
            a.btn.btn-large.btn-blue(href="https://carloscuesta.me/blog" onmousedown="ga('send', 'event', 'Button', 'Click', 'Read more posts');", target="_blank") See more posts
