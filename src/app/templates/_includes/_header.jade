include _nav.jade
header.site-header.center-xs(itemprop="author" itemscope itemtype="http://schema.org/Person")
    h1(itemprop="name") #{me.name}
    h3(itemprop="description") #{me.bio}
    .social
        a(itemprop="sameAs", href="https://twitter.com/#{social.twitter}")
            svg.icon.icon-twitter
                use(xlink:href="#icon-twitter")
        a(itemprop="sameAs", href="https://github.com/#{social.github}")
            svg.icon.icon-github
                use(xlink:href="#icon-github")
        a(itemprop="sameAs", href="https://es.linkedin.com/in/#{social.linkedin}")
            svg.icon.icon-linkedin
                use(xlink:href="#icon-linkedin")
